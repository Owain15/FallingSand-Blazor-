@page "/"

<PageTitle>Falling Sand</PageTitle>

<h1>Falling Sand</h1>

<hr>

<div class="AppWindow">

	<div class="Display">

		@for(int y = 0; y < Display.pixelData.GetLength(1); y ++)
		{   
			<div class="Display-Row">
			
				@for (int x = 0; x < Display.pixelData.GetLength(0); x++)
			    {
					RGB pixel = Display.GetCellColor(x, y);
					string setPixelColor = $"background-color:rgb({pixel.Red},{pixel.Blue},{pixel.Green});";
					
					<span class="Display-Pixel" style="@setPixelColor"></span>
					
			    }

			</div>
		}

	</div>

</div>
